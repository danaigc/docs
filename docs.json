{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Egg API",
  "contextual": {
    "options": ["copy", "view", "chatgpt", "claude", "perplexity", "mcp", "cursor", "vscode"]
  },
  "colors": {
    "primary": "#16A34A",
    "light": "#22C55E",
    "dark": "#15803D"
  },
  "favicon": "/favicon.svg",
  "api": {
    "baseUrl": "https://api.eggapi.ai",
    "auth": {
      "method": "bearer",
      "name": "Authorization"
    },
    "playground": {
      "mode": "show"
    }
  },
  "openapi": "/api-reference/openapi.json",
  "navigation": {
    "languages": [
      {
        "language": "en",
        "tabs": [
          {
            "tab": "Documentation",
            "groups": [
              {
                "group": "Getting Started",
                "pages": [
                  "en/index",
                  "en/quickstart"
                ]
              },
              {
                "group": "Guides",
                "pages": [
                  "en/guides/authentication",
                  "en/guides/models",
                  {
                    "group": "Models API",
                    "pages": [
                      "en/guides/models/veo3.1",
                      "en/guides/models/nanobanana",
                      "en/guides/models/nanobanana-pro",
                      "en/guides/models/imagen_4"
                    ]
                  },
                  "en/guides/async-tasks",
                  "en/guides/errors"
                ]
              }
            ]
          },
          {
            "tab": "API Reference",
            "groups": [
              {
                "group": "Overview",
                "pages": [
                  "en/api-reference/introduction"
                ]
              },
              {
                "group": "Generation",
                "pages": [
                  "POST /v1/generate"
                ]
              },
              {
                "group": "Tasks",
                "pages": [
                  "GET /v1/tasks/{id}",
                  "GET /v1/tasks"
                ]
              },
              {
                "group": "Usage",
                "pages": [
                  "GET /v1/usage",
                  "GET /v1/usage/summary"
                ]
              }
            ]
          }
        ]
      },
      {
        "language": "zh",
        "tabs": [
          {
            "tab": "文档",
            "groups": [
              {
                "group": "快速开始",
                "pages": [
                  "zh/index",
                  "zh/quickstart"
                ]
              },
              {
                "group": "指南",
                "pages": [
                  "zh/guides/authentication",
                  "zh/guides/models",
                  {
                    "group": "模型 API",
                    "pages": [
                      "zh/guides/models/veo3.1",
                      "zh/guides/models/nanobanana",
                      "zh/guides/models/nanobanana-pro",
                      "zh/guides/models/imagen_4"
                    ]
                  },
                  "zh/guides/async-tasks",
                  "zh/guides/errors"
                ]
              }
            ]
          },
          {
            "tab": "API 参考",
            "groups": [
              {
                "group": "概述",
                "pages": [
                  "zh/api-reference/introduction"
                ]
              },
              {
                "group": "生成",
                "pages": [
                  "POST /v1/generate"
                ]
              },
              {
                "group": "任务",
                "pages": [
                  "GET /v1/tasks/{id}",
                  "GET /v1/tasks"
                ]
              },
              {
                "group": "用量",
                "pages": [
                  "GET /v1/usage",
                  "GET /v1/usage/summary"
                ]
              }
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "API Status",
          "href": "https://status.eggapi.ai",
          "icon": "signal"
        },
        {
          "anchor": "GitHub",
          "href": "https://github.com/eggapi",
          "icon": "github"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@eggapi.ai"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://eggapi.ai/dashboard"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/eggapi",
      "github": "https://github.com/eggapi"
    }
  }
